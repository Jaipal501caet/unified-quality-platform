import http from 'k6/http';
import { check, sleep } from 'k6';
// Import BOTH the HTML and Text summary helpers
import { htmlReport } from "https://raw.githubusercontent.com/benc-uk/k6-reporter/main/dist/bundle.js";
import { textSummary } from "https://jslib.k6.io/k6-summary/0.0.1/index.js";

// --- CONFIGURATION: 50 USERS ---
export const options = {
  stages: [
    { duration: '10s', target: 10 }, 
    { duration: '30s', target: 50 }, 
    { duration: '10s', target: 0 },  
  ],
  thresholds: {
    http_req_duration: ['p(95)<500'], 
    http_req_failed: ['rate<0.01'],   
  },
};

export default function () {
  const url = 'https://parabank.parasoft.com/parabank/login.htm';
/*  const payload = {
    username: 'john',
    password: 'demo'
  };*/

  const payload = 'username=john&password=demo';

  const params = {
    headers: {
      'Content-Type': 'application/x-www-form-urlencoded',
    },
  };

  const res = http.post(url, payload, params);

  check(res, {
    'is status 302 (Login Success)': (r) => r.status === 302 || r.status === 200,
  });

  sleep(1);
}

// --- REPORTING ---
export function handleSummary(data) {
  return {
    // 1. Unified path to your root 'test-results' folder
    "/src/test-results/performance-report.html": htmlReport(data),
    
    // 2. This prints the summary to your terminal (standard output)
    stdout: textSummary(data, { indent: " ", enableColors: true }),
  };
}
